# CertSentinel Bot Configuration

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Admin User IDs (comma-separated Telegram user IDs)
ADMIN_IDS=123456789,987654321

# Monitoring Check Intervals (in seconds)
UPTIME_INTERVAL=300        # 5 minutes
SSL_INTERVAL=604800        # 1 week
DOMAIN_INTERVAL=2592000    # 30 days

# Alert Thresholds
SSL_WARNING_DAYS=7         # Alert when SSL cert expires in X days
DOMAIN_WARNING_DAYS=30     # Alert when domain expires in X days
LATENCY_WARNING_MS=2000    # Alert when response time > X milliseconds

# Database Configuration
DB_PATH=certsentinel.db
DB_TIMEOUT=10.0

# Logging
LOG_LEVEL=INFO
